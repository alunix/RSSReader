<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey">
    <TextView
        android:id="@+id/add_channel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Add Feed"
        android:textColor="@color/colorGreyAddChannelTitleText"
        android:textAppearance="?android:attr/textAppearanceLarge">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_channel_url_edit_view"
        android:hint="http://feed.url"
        android:background="@drawable/edit_text_add_channel"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_channel_cancel_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:background="@drawable/button_cancel_channel_selector"
            android:text="Cancel"
            android:textColor="@color/colorGreyText">
        </Button>

        <Button
            android:id="@+id/add_channel_add_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:text="Add"
            android:background="@drawable/button_add_channel_selector"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:capitalize="none">
        </Button>
    </LinearLayout>
</LinearLayout>